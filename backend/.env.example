# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barbershop_db
DB_USER=barbershop_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Use your SMTP service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@barbershop.com

# AWS Configuration (SNS for SMS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SNS_SENDER_ID=BalkanBarber

# SMS DND base URL for unsubscribe links
SMS_DND_BASE_URL=http://localhost:5001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin Setup (First admin user)
ADMIN_EMAIL=admin@barbershop.com
ADMIN_PASSWORD=Admin@123456
