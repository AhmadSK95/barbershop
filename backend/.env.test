# Test Environment Configuration
NODE_ENV=test
PORT=5002

# Test Database (use a separate test database!)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barbershop_test
DB_USER=barbershop_user
DB_PASSWORD=your_test_password

# JWT Secrets (can use same as dev for tests)
JWT_SECRET=test_jwt_secret_key_12345
JWT_REFRESH_SECRET=test_refresh_secret_key_67890
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin account for tests
ADMIN_EMAIL=admin@barbershop.com
ADMIN_PASSWORD=Admin@123456

# Email settings (disabled for tests)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=test@example.com
EMAIL_PASS=test_password
EMAIL_FROM=test@example.com
EMAIL_SERVICE=gmail

# AWS (optional for tests)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
